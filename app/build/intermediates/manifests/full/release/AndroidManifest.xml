                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maxicanwave.org.CreateGroupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
