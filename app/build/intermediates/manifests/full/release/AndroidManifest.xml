        </activity>
        <activity
            android:name="com.maxicanwave.org.TimerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maxicanwave.org.TaskActivity"
            android:label="Mexican Wave"
            android:theme="@style/AppTheme.NoActionBar" >
