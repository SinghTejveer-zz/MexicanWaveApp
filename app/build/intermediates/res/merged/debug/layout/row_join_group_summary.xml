<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#29B6F6"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon,21 Oct,2015"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_below="@+id/tvGroupName"
            android:padding="10dp"
            android:visibility="gone"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/btnCancel"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/btnJoin"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:background="#FF5722"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:id="@+id/btnJoin"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:background="#FF5722"
            />






    </RelativeLayout>



</LinearLayout><!-- From: file:/F:/updated%20code%20maxican%20wave/MaxicanWava/app/src/main/res/layout/row_join_group_summary.xml -->